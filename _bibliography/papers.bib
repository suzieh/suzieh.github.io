	journal = {Microbiology Spectrum},
	author = {Johnson, Abigail J. and Zhou, Shannon and Hoops, Susan L. and Hillmann, Benjamin and Schomaker, Matthew and Kincaid, Robyn and Daniel, Jerry and Beckman, Kenneth and Gohl, Daryl M. and Yohe, Sophia and Knights, Dan and Nelson, Andrew C.},
