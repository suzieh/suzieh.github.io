	urldate = {2023-02-07},
	journal = {Infection and Immunity},
	author = {Johnstone, Karen F. and Wei, Yuping and Bittner-Eddy, Peter D. and Vreeman, Gerrit W. and Stone, Ian A. and Clayton, Jonathan B. and Reilly, Cavan S. and Walbon, Travis B. and Wright, Elisa N. and Hoops, Susan L. and Boyle, William S. and Costalonga, Massimo and Herzberg, Mark C.},
