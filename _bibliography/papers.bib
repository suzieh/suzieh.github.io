	journal = {American Journal of Primatology},
	author = {Clayton, Jonathan B. and Shields-Cutler, Robin R. and Hoops, Susan L. and Al-Ghalith, Gabriel A. and Sha, John C. M. and Johnson, Timothy J. and Knights, Dan},
	year = {2019},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ajp.22977},
